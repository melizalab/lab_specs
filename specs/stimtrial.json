{
    "$id": "https://meliza.org/spec:2/stimtrial.json#",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "stimulus presentation trials",
    "type": "object",
    "properties": {
        "pprox": {
            "type": "array",
            "items": { "$ref": "#/$defs/stimtrial" }
        }
    },
    "required": ["pprox"],
    "$defs": {
        "stimtrial": {
            "allOf": [
                {
                    "$ref": "https://meliza.org/spec:2/pprox.json#/$defs/pproc"
                },
                {
                    "type": "object",
                    "description": "a single stimulus presentation trial",
                    "properties": {
                        "stimulus": {
                            "type": "string",
                            "description": "unique identifier for the stimulus presented"
                        },
                        "stimulus_begin": {
                            "type": "number",
                            "description": "the time at which the stimulus was presented (in seconds since interval[0]) "
                        }
                    },
                    "required": ["stimulus", "stimulus_begin"]
                }
            ]
        }
    }
}
