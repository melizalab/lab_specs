{
    "$id": "https://meliza.org/spec:2/pprox.json",
    "$schema": "http://json-schema.org/schema#",
    "title": "point process collection",

    "$defs": {
        "pproc": {
            "$id": "/pproc",
            "$schema": "http://json-schema.org/schema#",
            "description": "a single point process",
            "type": "object",
            "properties": {
                "events": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "description": "event time in seconds"
                    }
                },
                "proc_on": {
                    "type": "number",
                    "description": "start of process in seconds",
                    "default": 0
                },
                "proc_off": {
                    "type": "number",
                    "description": "end of process in seconds"
                },
                "offset": {
                    "type": "number",
                    "description": "offset, in seconds, added to event times"
                },
                "marks": {
                    "description": "map of arrays that mark the events",
                    "type": "object",
                    "additionalProperties": { "type": "array" }
                }
            },
            "required": ["events", "proc_off"]
        }
    },

    "type": "object",
    "properties": {
        "pprox": {
            "type": "array",
            "items": { "$ref": "/pproc" }
        },
        "version": { "type": "integer" }
    },
    "required": ["pprox"]
}
